/* pages/floors/floors.wxss */

.slide-image {
  width: 100%;
}

.long-dec {
  padding-left: 20rpx;
  margin-top: 10rpx;
  display: -webkit-box; /*关键属性*/
  font-size: 28rpx;
  color: #cfcfd0;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical; /* 关键属性 */
  -webkit-line-clamp: 6; /* 关键属性 */
  overflow: hidden; /* 关键属性 */
  text-overflow: ellipsis; /* 超出内容显示省略号*/
}

.hide {
  display: -webkit-box;
}

.show {
  display: block;
}

.arrow {
  position: absolute;
  width: 90rpx;
  height: 40rpx;
  left: 50%;
  transform: translate(-50%);
}
